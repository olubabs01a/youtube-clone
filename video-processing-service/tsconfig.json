{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@configuration": ["../configuration"],
      "@util": ["../util"],
      "@types": ["../types"]
    }
  },
  "include": ["src/**/*.json", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
