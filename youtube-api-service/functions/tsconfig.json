{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "paths": {
      "@configuration": ["../../configuration"],
      "@util": ["../../util"],
      "@types": ["../../types"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
